@page
@model LendSecure.Pages.KYC.UploadModel
@{
    ViewData["Title"] = "Upload KYC Documents";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">📄 Upload KYC Documents</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <strong>📋 KYC Verification Required</strong>
                        <p class="mb-0">Please upload a clear photo of your ID (Student ID, National ID, or Passport) to verify your identity. Admin will review and approve within 24 hours.</p>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success">
                            @Model.SuccessMessage
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            @Model.ErrorMessage
                        </div>
                    }

                    <!-- Existing KYC Documents -->
                    @if (Model.ExistingDocuments.Any())
                    {
                        <div class="mb-4">
                            <h5>Your Submitted Documents</h5>
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Document Type</th>
                                            <th>Submitted On</th>
                                            <th>Status</th>
                                            <th>Reviewed By</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var doc in Model.ExistingDocuments)
                                        {
                                            <tr>
                                                <td>@doc.DocType</td>
                                                <td>@doc.DocId</td>
                                                <td>
                                                    @if (doc.Status == "Approved")
                                                    {
                                                        <span class="badge bg-success">✓ Approved</span>
                                                    }
                                                    else if (doc.Status == "Rejected")
                                                    {
                                                        <span class="badge bg-danger">✗ Rejected</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-warning">⏳ Pending Review</span>
                                                    }
                                                </td>
                                                <td>@(doc.ReviewerId.HasValue ? "Admin" : "Not Yet Reviewed")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }

                    <!-- Upload Form -->
                    <form method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label asp-for="Input.DocType" class="form-label">Document Type</label>
                            <select asp-for="Input.DocType" class="form-select">
                                <option value="">-- Select Document Type --</option>
                                <option value="Student ID">Student ID</option>
                                <option value="National ID">National ID</option>
                                <option value="Passport">Passport</option>
                            </select>
                            <span asp-validation-for="Input.DocType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.DocumentFile" class="form-label">Upload Document Image</label>
                            <input asp-for="Input.DocumentFile" class="form-control" type="file" accept="image/*" id="fileInput" />
                            <span asp-validation-for="Input.DocumentFile" class="text-danger"></span>
                            <small class="text-muted">Accepted formats: JPG, PNG, JPEG (Max 5MB)</small>
                        </div>

                        <!-- Image Preview -->
                        <div class="mb-3" id="imagePreviewContainer" style="display:none;">
                            <label class="form-label">Preview:</label>
                            <div class="border p-2">
                                <img id="imagePreview" src="" alt="Document Preview" style="max-width: 100%; max-height: 400px;" />
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">📤 Upload Document</button>
                            <a href="/@Model.UserRole/Dashboard" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Image preview
        document.getElementById('fileInput').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('imagePreview').src = e.target.result;
                    document.getElementById('imagePreviewContainer').style.display = 'block';
                }
                reader.readAsDataURL(file);
            }
        });
    </script>
}