@page
@model LendSecure.Pages.KYC.UploadModel
@{
    ViewData["Title"] = "Upload KYC Documents";
}

<link rel="stylesheet" href="~/css/kyc-upload.css" asp-append-version="true" />

<div class="kyc-container">
    <!-- Page Header -->
    <div class="page-header-card">
        <div class="header-icon-box">
            <i class="bi bi-person-badge"></i>
            <!-- Fallback icon -->
            🪪
        </div>
        <div class="header-content">
            <h2>Upload KYC Documents</h2>
            <p>Verify your identity to secure your account.</p>
        </div>
    </div>

    <!-- Info Alert -->
    <div class="info-alert">
        <div class="info-icon">
            <i class="bi bi-info-circle-fill"></i>
            ℹ️
        </div>
        <div class="info-content">
            <h5>KYC Verification Required</h5>
            <p>Please upload a clear photo of your ID (Student ID, National ID, or Passport) to verify your identity. Admin will review and approve within 24 hours.</p>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show mb-4">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show mb-4">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Submitted Documents Section -->
    <div class="documents-section">
        <h5 class="section-title">Your Submitted Documents</h5>
        @if (Model.ExistingDocuments.Any())
        {
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Document Type</th>
                            <th>Submitted On</th>
                            <th>Status</th>
                            <th>Reviewed By</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var doc in Model.ExistingDocuments)
                        {
                            <tr>
                                <td><strong>@doc.DocType</strong></td>
                                <td>@doc.DocId</td>
                                <td>
                                    @if (doc.Status == "Approved")
                                    {
                                        <span class="status-badge status-approved">
                                            <span>✓</span> Approved
                                        </span>
                                    }
                                    else if (doc.Status == "Rejected")
                                    {
                                        <span class="status-badge status-rejected">
                                            <span>✗</span> Rejected
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="status-badge status-pending">
                                            <span>⏳</span> Pending Review
                                        </span>
                                    }
                                </td>
                                <td>@(doc.ReviewerId.HasValue ? "Admin" : "Not Yet Reviewed")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <p class="text-muted">No documents submitted yet.</p>
        }
    </div>

    <!-- Upload Form -->
    <div class="upload-card">
        <form method="post" enctype="multipart/form-data">
            <div class="mb-4">
                <label asp-for="Input.DocType" class="form-label">Document Type</label>
                <select asp-for="Input.DocType" class="form-select">
                    <option value="">-- Select Document Type --</option>
                    <option value="Student ID">Student ID</option>
                    <option value="National ID">National ID</option>
                    <option value="Passport">Passport</option>
                </select>
                <span asp-validation-for="Input.DocType" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label class="form-label">Upload Document Image</label>
                <div class="file-upload-area" id="dropZone">
                    <input asp-for="Input.DocumentFile" type="file" accept="image/*" id="fileInput" class="file-input-hidden" />
                    <div class="upload-icon">
                        <i class="bi bi-cloud-arrow-up"></i>
                        ☁️
                    </div>
                    <div class="upload-text">
                        <span class="upload-link">Choose file</span> or drag and drop
                    </div>
                    <div class="upload-hint">
                        Accepted formats: JPG, PNG, JPEG (Max 5MB)
                    </div>
                </div>
                <span asp-validation-for="Input.DocumentFile" class="text-danger mt-2 d-block"></span>
            </div>

            <!-- Image Preview -->
            <div class="preview-container" id="imagePreviewContainer" style="display:none;">
                <p class="mb-2 text-muted small">Selected File Preview:</p>
                <img id="imagePreview" src="" alt="Document Preview" class="preview-image" />
            </div>

            <div class="action-buttons">
                <a href="/@Model.UserRole/Dashboard" class="btn-cancel">Cancel</a>
                <button type="submit" class="btn-upload">
                    <i class="bi bi-file-earmark-arrow-up"></i>
                    📄 Upload Document
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Image preview and Drag & Drop visual feedback
        const fileInput = document.getElementById('fileInput');
        const dropZone = document.getElementById('dropZone');
        const previewContainer = document.getElementById('imagePreviewContainer');
        const previewImage = document.getElementById('imagePreview');

        // Handle file selection
        fileInput.addEventListener('change', function(e) {
            handleFiles(e.target.files);
        });

        // Drag & Drop events
        dropZone.addEventListener('dragover', (e) => {
            e.preventDefault();
            dropZone.style.borderColor = '#2563EB';
            dropZone.style.backgroundColor = '#EFF6FF';
        });

        dropZone.addEventListener('dragleave', (e) => {
            e.preventDefault();
            dropZone.style.borderColor = '#D1D5DB';
            dropZone.style.backgroundColor = '#F9FAFB';
        });

        dropZone.addEventListener('drop', (e) => {
            e.preventDefault();
            dropZone.style.borderColor = '#D1D5DB';
            dropZone.style.backgroundColor = '#F9FAFB';
            
            if (e.dataTransfer.files.length > 0) {
                fileInput.files = e.dataTransfer.files;
                handleFiles(e.dataTransfer.files);
            }
        });

        function handleFiles(files) {
            if (files && files[0]) {
                const file = files[0];
                if (file.type.startsWith('image/')) {
                    const reader = new FileReader();
                    reader.onload = function(e) {
                        previewImage.src = e.target.result;
                        previewContainer.style.display = 'block';
                    }
                    reader.readAsDataURL(file);
                }
            }
        }
    </script>
}