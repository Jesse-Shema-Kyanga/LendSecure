@page
@model LendSecure.Pages.Wallet.TransactionsModel
@{
    ViewData["Title"] = "Wallet Transactions";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Transaction History</h2>
        <div>
            <a asp-page="/Wallet/Deposit" class="btn btn-success me-2">âž• Deposit Funds</a>
            <a asp-page="/Lender/Dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.Transactions.Count == 0)
            {
                <div class="alert alert-info mb-0">No transactions found.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>Type</th>
                                <th>Amount</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var txn in Model.Transactions)
                            {
                                <tr>
                                    <td>@txn.CreatedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                    <td>
                                        @if (txn.TxnType == "Credit" || txn.TxnType == "Deposit")
                                        {
                                            <span class="badge bg-success">@txn.TxnType</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">@txn.TxnType</span>
                                        }
                                    </td>
                                    <td class="@(txn.TxnType == "Credit" || txn.TxnType == "Deposit" ? "text-success" : "text-danger") fw-bold">
                                        @(txn.TxnType == "Credit" || txn.TxnType == "Deposit" ? "+" : "-") @txn.Amount.ToString("N0") @txn.Currency
                                    </td>
                                    <td>
                                        @if (txn.RelatedLoanId != null)
                                        {
                                            <span class="text-muted">Loan ID: @txn.RelatedLoanId.ToString().Substring(0, 8)...</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
