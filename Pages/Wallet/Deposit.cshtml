@page
@model LendSecure.Pages.Wallet.DepositModel
@{
    ViewData["Title"] = "Deposit Funds";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">💵 Add Money to Wallet</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>⚠️ Demo Mode:</strong> This is simulated money for testing purposes only. In production, this would integrate with a real payment gateway (MTN Mobile Money, Airtel Money, etc.).
                    </div>

                    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            @Model.SuccessMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            @Model.ErrorMessage
                        </div>
                    }

                    <div class="alert alert-light border mb-4">
                        <strong>Current Balance:</strong> <span class="text-success fs-5">@Model.CurrentBalance.ToString("N0") RWF</span>
                    </div>

                    <form method="post">
                        <div class="form-group mb-4">
                            <label asp-for="Amount" class="form-label">Amount to Deposit</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text">RWF</span>
                                <input asp-for="Amount" class="form-control" type="number" min="100" step="100" placeholder="Enter amount (min: 100)" />
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                            <small class="form-text text-muted">Minimum: 100 RWF | Maximum: 1,000,000 RWF</small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">💳 Deposit Funds</button>
                            @if (Model.UserRole == "Lender")
                            {
                                <a asp-page="/Lender/Dashboard" class="btn btn-outline-secondary">Cancel</a>
                            }
                            else if (Model.UserRole == "Borrower")
                            {
                                <a asp-page="/Borrower/Dashboard" class="btn btn-outline-secondary">Cancel</a>
                            }
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
