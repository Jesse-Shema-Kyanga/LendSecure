@page
@model LendSecure.Pages.Admin.LoanApprovalsModel
@{
    ViewData["Title"] = "Loan Approvals";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-12">
            <h2>💵 Loan Approval Management</h2>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active">Loan Approvals</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Tabs -->
    <ul class="nav nav-tabs mb-3">
        <li class="nav-item">
            <a class="nav-link @(Model.Filter == "Pending" ? "active" : "")" href="?filter=Pending">
                ⏳ Pending (@Model.PendingCount)
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(Model.Filter == "Approved" ? "active" : "")" href="?filter=Approved">
                ✓ Approved (@Model.ApprovedCount)
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(Model.Filter == "Rejected" ? "active" : "")" href="?filter=Rejected">
                ✗ Rejected (@Model.RejectedCount)
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(Model.Filter == "All" ? "active" : "")" href="?filter=All">
                All Loans (@Model.TotalCount)
            </a>
        </li>
    </ul>

    <!-- Loan Requests List -->
    @if (Model.LoanRequests.Any())
    {
        <div class="row">
            @foreach (var loan in Model.LoanRequests)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 @(loan.Status == "Pending" ? "border-warning" : loan.Status == "Approved" ? "border-success" : "border-danger")">
                        <div class="card-header @(loan.Status == "Pending" ? "bg-warning" : loan.Status == "Approved" ? "bg-success text-white" : "bg-danger text-white")">
                            <strong>Loan Request</strong>
                            <span class="float-end badge @(loan.Status == "Pending" ? "bg-dark" : "bg-light text-dark")">
                                @loan.Status
                            </span>
                        </div>
                        <div class="card-body">
                            <!-- Borrower Info -->
                            <h5 class="card-title">@loan.Borrower.Email</h5>
                            <p class="mb-1"><small class="text-muted">Borrower Role: @loan.Borrower.Role</small></p>

                            <hr />

                            <!-- Loan Details -->
                            <div class="mb-2">
                                <strong>💰 Amount:</strong> @loan.AmountRequested.ToString("N0") RWF
                            </div>
                            <div class="mb-2">
                                <strong>📅 Term:</strong> @loan.TermMonths month@(loan.TermMonths > 1 ? "s" : "")
                            </div>
                            <div class="mb-2">
                                <strong>📊 Interest Rate:</strong> @loan.InterestRate%
                            </div>
                            <div class="mb-2">
                                <strong>💵 Total Repayment:</strong> @((loan.AmountRequested + (loan.AmountRequested * loan.InterestRate / 100)).ToString("N0")) RWF
                            </div>
                            <div class="mb-2">
                                <strong>📆 Weekly Payment:</strong> @(((loan.AmountRequested + (loan.AmountRequested * loan.InterestRate / 100)) / 4).ToString("N0")) RWF
                            </div>

                            <hr />

                            <!-- Purpose -->
                            <div class="mb-2">
                                <strong>📝 Purpose:</strong>
                                <p class="text-muted small">@loan.Purpose</p>
                            </div>

                            <!-- Timestamps -->
                            <div class="mb-2">
                                <small class="text-muted">
                                    <strong>Requested:</strong> @loan.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                                </small>
                            </div>

                            @if (loan.Status != "Pending")
                            {
                                <div class="mb-2">
                                    <small class="text-muted">
                                        <strong>Reviewed:</strong> @(loan.ApprovedAt?.ToString("MMM dd, yyyy HH:mm") ?? "N/A")
                                    </small>
                                </div>
                            }

                            <!-- Action Buttons -->
                            @if (loan.Status == "Pending")
                            {
                                <hr />
                                <form method="post" class="d-grid gap-2">
                                    <input type="hidden" name="loanId" value="@loan.LoanId" />
                                    <button type="submit" name="action" value="approve" class="btn btn-success">
                                        ✓ Approve Loan
                                    </button>
                                    <button type="submit" name="action" value="reject" class="btn btn-danger">
                                        ✗ Reject Loan
                                    </button>
                                </form>
                            }
                            else
                            {
                                <div class="mt-2">
                                    <span class="badge bg-secondary">Decision Made</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination Info -->
        <div class="row mt-3">
            <div class="col-12 text-center">
                <p class="text-muted">Showing @Model.LoanRequests.Count loan request(s)</p>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <strong>No loan requests found.</strong>
            @if (Model.Filter == "Pending")
            {
                <p class="mb-0">All loan requests have been reviewed!</p>
            }
            else
            {
                <p class="mb-0">No loan requests match the selected filter.</p>
            }
        </div>
    }
</div>