@page
@model LendSecure.Pages.Admin.KYCReviewModel
@{
    ViewData["Title"] = "KYC Review";
}

<link rel="stylesheet" href="~/css/admin-kyc-review.css" asp-append-version="true" />

<div class="kyc-review-container">
    <!-- Page Header -->
    <div class="page-header-row">
        <div class="header-title">
            <i class="bi bi-person-badge"></i>
            <h2>KYC Document Review</h2>
        </div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
                <li class="breadcrumb-item active">KYC Review</li>
            </ol>
        </nav>
    </div>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div class="alert alert-success alert-dismissible fade show mb-4">
            @Model.SuccessMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show mb-4">
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Tabs -->
    <ul class="nav nav-tabs">
        <li class="nav-item">
            <a class="nav-link @(Model.Filter == "Pending" ? "active" : "")" href="?filter=Pending">
                Pending (@Model.PendingCount)
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link @(Model.Filter == "All" ? "active" : "")" href="?filter=All">
                All Documents (@Model.TotalCount)
            </a>
        </li>
    </ul>

    <!-- KYC Documents List -->
    @if (Model.Documents.Any())
    {
        <div class="row g-4">
            @foreach (var doc in Model.Documents)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="doc-card">
                        <div class="doc-header">
                            <span class="doc-type">@doc.DocType</span>
                            @if (doc.Status == "Pending")
                            {
                                <span class="status-badge status-pending">Pending</span>
                            }
                            else if (doc.Status == "Approved")
                            {
                                <span class="status-badge status-approved">Approved</span>
                            }
                            else
                            {
                                <span class="status-badge status-rejected">Rejected</span>
                            }
                        </div>

                        <!-- Document Image Thumbnail -->
                        <div class="doc-image-container" data-bs-toggle="modal" data-bs-target="#imageModal_@doc.DocId">
                            <img src="@doc.FilePath" alt="KYC Document" class="doc-thumbnail" />
                        </div>

                        <div class="doc-details">
                            <div class="detail-row">
                                <span class="detail-label">User:</span>
                                <span class="detail-value">@doc.User.Email</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Role:</span>
                                <span class="detail-value">@doc.User.Role</span>
                            </div>
                            <div class="detail-row">
                                <span class="detail-label">Submitted:</span>
                                <span class="detail-value">@doc.DocId.ToString().Substring(0, 20)...</span>
                            </div>
                        </div>

                        @if (doc.Status == "Pending")
                        {
                            <form method="post" class="action-buttons">
                                <input type="hidden" name="docId" value="@doc.DocId" />
                                <button type="submit" name="action" value="approve" class="btn-approve">
                                    <i class="bi bi-check-circle"></i> Approve
                                </button>
                                <button type="submit" name="action" value="reject" class="btn-reject">
                                    <i class="bi bi-x-circle"></i> Reject
                                </button>
                            </form>
                        }
                        else
                        {
                            <div class="review-info">
                                Reviewed on @(doc.ReviewedAt?.ToString("MMM dd, yyyy") ?? "-")
                            </div>
                        }
                    </div>

                    <!-- Image Modal -->
                    <div class="modal fade" id="imageModal_@doc.DocId" tabindex="-1">
                        <div class="modal-dialog modal-lg modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">@doc.DocType - @doc.User.Email</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body text-center bg-light">
                                    <img src="@doc.FilePath" alt="KYC Document" class="img-fluid" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            @if (Model.Filter == "Pending")
            {
                <p class="mb-0">All KYC documents have been reviewed!</p>
            }
            else
            {
                <p class="mb-0">No KYC documents have been submitted yet.</p>
            }
        </div>
    }
</div>