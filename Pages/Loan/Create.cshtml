@page
@model LendSecure.Pages.Loan.CreateModel
@{
    ViewData["Title"] = "Request a Loan";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-info">
                <h4 class="mb-0">üíµ Request a Loan</h4>
                <p class="mb-0">Fill out the form below to request a loan. Your request will be reviewed by an admin.</p>
            </div>
        </div>
    </div>

    @if (Model.KYCStatus != "Approved")
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-warning">
                    <strong>‚ö†Ô∏è KYC Notice:</strong> 
                    @if (Model.KYCStatus == "Pending")
                    {
                        <span>Your KYC documents are under review. You can still submit loan requests.</span>
                    }
                    else
                    {
                        <span>You haven't submitted KYC documents yet. We recommend completing KYC verification first.</span>
                    }
                </div>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Loan Request Form</h5>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            @Model.ErrorMessage
                        </div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="Input.AmountRequested" class="form-label">Amount Requested (RWF)</label>
                            <input asp-for="Input.AmountRequested" class="form-control" type="number" step="1000" min="1000" max="10000000" placeholder="Enter amount (e.g., 50000)" />
                            <small class="form-text text-muted">Minimum: 1,000 RWF | Maximum: 10,000,000 RWF</small>
                            <span asp-validation-for="Input.AmountRequested" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Purpose" class="form-label">Loan Purpose</label>
                            <textarea asp-for="Input.Purpose" class="form-control" rows="4" placeholder="Describe what you need this loan for (e.g., School fees, Business capital, Emergency expenses...)"></textarea>
                            <small class="form-text text-muted">Please provide a clear description (10-500 characters)</small>
                            <span asp-validation-for="Input.Purpose" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.TermWeeks" class="form-label">Loan Term (Weeks)</label>
                                <input asp-for="Input.TermWeeks" class="form-control" type="number" min="4" max="52" placeholder="e.g., 16" />
                                <small class="form-text text-muted">Between 4 and 52 weeks (1-12 months)</small>
                                <span asp-validation-for="Input.TermWeeks" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Input.InterestRate" class="form-label">Interest Rate (%)</label>
                                <input asp-for="Input.InterestRate" class="form-control" type="number" step="0.1" min="1" max="20" placeholder="e.g., 5.5" />
                                <small class="form-text text-muted">Between 1% and 20% per year</small>
                                <span asp-validation-for="Input.InterestRate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <small>
                                <strong>üìã Important Information:</strong>
                                <ul class="mb-0 mt-2">
                                    <li>Your loan request will be reviewed by an administrator</li>
                                    <li>Once approved, lenders can fund your loan</li>
                                    <li>Repayments will be split into 4 equal weekly payments</li>
                                    <li>Interest is calculated on the total loan amount</li>
                                </ul>
                            </small>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">Submit Loan Request</button>
                            <a href="/Borrower/Dashboard" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

