@page
@model LendSecure.Pages.Loan.MyFundingsModel
@{
    ViewData["Title"] = "My Funded Loans";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Funded Loans</h2>
        <a asp-page="/Lender/Dashboard" class="btn btn-outline-secondary">Back to Dashboard</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.Fundings.Count == 0)
            {
                <div class="alert alert-info mb-0">You haven't funded any loans yet. <a asp-page="/Loan/Browse">Browse available loans</a> to start investing!</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Date Funded</th>
                                <th>Borrower</th>
                                <th>Loan Purpose</th>
                                <th>Amount Funded</th>
                                <th>Loan Status</th>
                                <th>Interest Rate</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var funding in Model.Fundings)
                            {
                                <tr>
                                    <td>@funding.FundedAt.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(funding.Loan.Borrower.Profile?.FirstName))
                                        {
                                            @($"{funding.Loan.Borrower.Profile.FirstName} {funding.Loan.Borrower.Profile.LastName}")
                                        }
                                        else
                                        {
                                            @funding.Loan.Borrower.Email
                                        }
                                    </td>
                                    <td>@funding.Loan.Purpose</td>
                                    <td class="fw-bold text-success">@funding.Amount.ToString("N0") RWF</td>
                                    <td>
                                        @if (funding.Loan.Status == "Funded")
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else if (funding.Loan.Status == "Completed")
                                        {
                                            <span class="badge bg-primary">Repaid</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">@funding.Loan.Status</span>
                                        }
                                    </td>
                                    <td>@funding.Loan.InterestRate%</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
