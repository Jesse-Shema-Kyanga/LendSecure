@page
@model LendSecure.Pages.Loan.MyLoansModel
@{
    ViewData["Title"] = "My Loans";
}

<link rel="stylesheet" href="~/css/my-loans.css" asp-append-version="true" />

<div class="my-loans-container">
    <!-- Page Header -->
    <div class="page-header-card">
        <div class="header-icon-box">
            <i class="bi bi-card-list"></i>
            <!-- Fallback icon if Bootstrap Icons not loaded -->
            📋
        </div>
        <div class="header-content">
            <h2>My Loan Requests</h2>
            <p>View all your loan requests and their current status.</p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.MyLoans.Any())
    {
        <div class="row g-4">
            @foreach (var loan in Model.MyLoans)
            {
                <div class="col-md-6">
                    <div class="loan-card">
                        <div class="loan-card-header">
                            <span class="loan-id">Loan #@loan.LoanId.ToString().Substring(0, 8)...</span>
                            @{
                                var statusClass = loan.Status switch
                                {
                                    "Pending" => "status-pending",
                                    "Approved" => "status-approved",
                                    "Funded" => "status-funded",
                                    "Repaying" => "status-repaying",
                                    "Completed" => "status-completed",
                                    "Rejected" => "status-rejected",
                                    _ => "status-completed"
                                };
                            }
                            <span class="status-badge @statusClass">@loan.Status</span>
                        </div>

                        <div class="loan-details-grid">
                            <div class="detail-item">
                                <span class="detail-label">Amount:</span>
                                <span class="detail-value">@loan.AmountRequested.ToString("N0") @loan.Currency</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Purpose:</span>
                                <span class="detail-value">@loan.Purpose</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Term:</span>
                                <span class="detail-value">@loan.TermMonths month(s)</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Interest Rate:</span>
                                <span class="detail-value">@loan.InterestRate.ToString("N2")%</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Total Repayment:</span>
                                <span class="detail-value">@((loan.AmountRequested + (loan.AmountRequested * loan.InterestRate / 100)).ToString("N0")) RWF</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Created:</span>
                                <span class="detail-value">@loan.CreatedAt.ToString("MMMM dd, yyyy")</span>
                            </div>
                        </div>

                        <!-- Funding Progress -->
                        <div class="progress-section">
                            <span class="progress-label">Funding Progress:</span>
                            @{
                                var totalFunded = loan.Fundings?.Sum(f => f.Amount) ?? 0;
                                var fundingPercentage = loan.AmountRequested > 0 ? (totalFunded / loan.AmountRequested) * 100 : 0;
                            }
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" 
                                     style="width: @Math.Min(fundingPercentage, 100).ToString("N0")%"
                                     aria-valuenow="@fundingPercentage" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <div class="progress-stats">
                                <span>Funded: @totalFunded.ToString("N0") / @loan.AmountRequested.ToString("N0") @loan.Currency</span>
                                <span class="percentage">@Math.Min(fundingPercentage, 100).ToString("N0")%</span>
                            </div>
                        </div>

                        <!-- Repayments Info -->
                        @if (loan.Repayments != null && loan.Repayments.Any())
                        {
                            var paidCount = loan.Repayments.Count(r => r.Status == "Paid");
                            var totalRepayments = loan.Repayments.Count;
                            <div class="mt-3 d-flex justify-content-between align-items-center" style="font-size: 0.85rem;">
                                <span class="fw-bold text-dark">Repayments:</span>
                                <span class="text-muted">@paidCount/@totalRepayments completed</span>
                            </div>
                            
                            @if (loan.ApprovedAt.HasValue)
                            {
                                <div class="mt-1 text-muted" style="font-size: 0.75rem;">
                                    Approved on: @loan.ApprovedAt.Value.ToString("MMMM dd, yyyy")
                                </div>
                            }
                        }

                        <!-- Action Button -->
                        @if (loan.Status == "Funded" || loan.Status == "Repaying")
                        {
                            <a href="/Repayment/Schedule?loanId=@loan.LoanId" class="btn-view-schedule">View Repayment Schedule</a>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="alert alert-info d-inline-block">
                <h5>No Loans Yet</h5>
                <p>You haven't created any loan requests yet. Start by creating your first loan request!</p>
            </div>
        </div>
    }

    <!-- Page Actions -->
    <div class="page-actions">
        <a href="/Loan/Create" class="btn-new-loan">
            <span>+</span> Request New Loan
        </a>
        <a href="/Borrower/Dashboard" class="btn-back">
            <span>←</span> Back to Dashboard
        </a>
    </div>
</div>